            </intent-filter>
        </activity>

        <activity android:name=".ViewClassActivity" android:exported="true"/>
        <activity android:name=".ViewTeacherActivity" android:exported="true"/>
        <activity android:name=".AddTeacherActivity" android:exported="true"/>
        <activity android:name=".EditTeacherActivity" android:exported="true"/>
        <activity android:name=".AddClassActivity" android:exported="true"/>
        <activity android:name=".ClassDetailActivity" android:exported="true"/>
        <activity android:name=".EditClassActivity" android:exported="true"/>
        <activity android:name=".ViewCustomerActivity" android:exported="true"/>
